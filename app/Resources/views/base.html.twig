<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{% block title %}Fiches Client{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}" type="text/css" />

        {% endblock %}
    </head>
    <body>
        <div class="container">
          <header class="jumbotron">
            <h1>Gestion de Clients</h1>
          </header>
          {% if app.user is not null %}
            <a href="{{ path('logout') }}" class="btn btn-primary">Se d√©connecter</a>
          {% endif %}
        </div>
        <div class="container">
          {% block login %}
          <div class="row">
            <nav class="col-md-4 col-md-offset-1">
              <h2>Options</h2>
              <ul class="nav nav-pills nav-stacked">
                <li>
                  <a href="{{ path('ajouter') }}">Ajouter un client</a>
                </li>
                <li>
                  <a href="{{ path('serialize') }}">Liste au format JSON</a>
                </li>
              </ul>
            </nav>
            <section class="col-md-7">
              <div id="content" class="span9">
                {% block body %}
                {% endblock %}    
              </div>
            </section>
          </div>
          {% endblock %}
        </div>
      </div>         
    </body>
</html>
